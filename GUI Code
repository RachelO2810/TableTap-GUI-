#login option buttons
login_manager_btn = tk.Button(login_frame, text = 'Manager Login')
login_manager_btn.pack()

server_clockin_btn = tk.Button(login_frame, text = 'Server Clock In')
server_clockin_btn.pack()
'''

'''
